{% extends 'base.html.twig' %}

{% block title %}Détail d'une session{% endblock %}

{% block body %}
    <h1>Détail d'une session</h1>

    <h2>{{ session }}</h2>

    <h3>Liste des stagiaires :</h3>

    <ul class="list-unstyled">
        {% set counter = 1 %}
        {% for stagiaire in stagiaires %}
            <li>
                {{ counter }}# <a href="{{ path('show_stagiaire', {'id': stagiaire.id}) }}">{{ stagiaire.nom }} {{ stagiaire.prenom }}</a>
            </li>
            {% set counter = counter + 1 %}
        {% endfor %}
    </ul>

    <h3>Liste des cours :</h3>

    <table class="table table-hover table-responsive">
        <thead class="table-light">
            <tr class="text-center">
                <th>Module</th>
                <th>NbJours</th>
            </tr>
        </thead>
        <tbody>
            {% for programme in programmes %}
                <tr class="text-center">
                    <td>{{ programme.cours }}</td>
                    <td>{{ programme.nbJours }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}