{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center p-3">S'enregistrer</h1>

    {{ form_errors(registrationForm) }}

<section class="bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Créer un compte</h2>

                            {{ form_start(registrationForm) }}

                                <div class="form-outline mb-4">
                                    {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                </div>

                                <div class="form-outline mb-4">
                                    {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                </div>

                                <div class="form-outline mb-4">
                                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                </div>

                                <div class="form-outline mb-4">
                                    {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    <p>
                                        Le mot de passe doit contenir au moins lettre majuscule, une lettre minuscule, un chiffre de 0-9, un caractère spécial (#?!@$%^&*-), et 12 caractères.
                                    </p>
                                </div>

                                <div class="form-outline mb-4">
                                    {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input me-2'}, 'type': 'checkbox'}) }}
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Enregistrer
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">Déjà un compte ?
                                    <a href="{{ path('app_login') }}" class="fw-bold text-body">
                                        <u>Se connecter</u>
                                    </a>
                                </p>

                            {{ form_end(registrationForm) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
