{% extends 'base.html.twig' %}

{% block title %}Liste des cours{% endblock %}

{% block body %}

    <h1>Liste des cours</h1> 

    <a href="{{ path('new_cours') }}" class="btn btn-success w-25">Ajouter un cours</a>

    <table class="table table-hover table-responsive">
        <thead class="table-light">
            <tr>
                <th>Cours</th>
                <th>Modifier</th>
                <th>Suppression</th>
            </tr>
        </thead>
        <tbody>
            {% for cours in cours %}
            <tr>
                <td>
                    {# Si on clique sur une catégorie on peut voir le détail d'une catégorie #}
                    <a href="{{ path('show_cours', {'id': cours.id}) }}" class="align-middle text-decoration-none">{{ cours }}</a>
                </td>
                <td>
                    {# Modifier une catégorie #}
                    <a class="btn btn-warning" href="{{ path('edit_cours', {'id': cours.id}) }}">Edit</a>
                </td>
                <td>
                    {# Supprimer une catégorie #}
                    <a class="btn btn-danger" href="{{ path('delete_cours', {'id': cours.id}) }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
