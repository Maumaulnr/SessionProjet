{% extends 'base.html.twig' %}

{% block title %}Détail d'un stagiaire{% endblock %}

{% block body %}
    <h1>Détail d'un stagiaire</h1>

    <h2>{{ stagiaire }}</h2>

    <p>
        {% for session in sessions %}
        Sessions : <a href="{{ path('show_session', {'id': session.id}) }}">{{ session.nomSession }}</a>
        {% endfor %}
    </p> 
    <p>
        Date de naissance : {{ stagiaire.dateNaissance | date("d.m.Y") }}
    </p>
    <p>
        Ville : {{ stagiaire.ville }}
    </p>
    <p>
        Email : {{ stagiaire.email }}
    </p>
    <p>
        Téléphone : {{ stagiaire.telephone}}
    </p>


{% endblock %}