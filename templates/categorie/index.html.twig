{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1> 

    <a href="{{ path('new_categorie') }}" class="btn btn-success w-25">Ajouter une catégorie</a>

    <table class="table table-hover table-responsive">
        <thead class="table-light">
            <tr>
                <th>Catégorie</th>
                <th>Modifier</th>
                <th>Suppression</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
            <tr>
                <td>
                    {# Si on clique sur une catégorie on peut voir le détail d'une catégorie #}
                    <a href="" class="align-middle text-decoration-none">{{ categorie }}</a>
                </td>
                <td>
                    {# Modifier une catégorie #}
                    <a class="btn btn-warning" href="{{ path('edit_categorie', {'id': categorie.id}) }}">Edit</a>
                </td>
                <td>
                    {# Supprimer une catégorie #}
                    <a class="btn btn-danger" href="{{ path('delete_categorie', {'id': categorie.id}) }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
