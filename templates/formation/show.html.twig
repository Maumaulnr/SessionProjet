{% extends 'base.html.twig' %}

{% block title %}Détail d'une formation{% endblock %}

{% block body %}
    <h1>Détail d'une formation</h1>

    <h2>{{ formation }}</h2>

    <p>Sessions de la formation</p> 
    {% for session in formation.sessions %}
    <p>
        <a href="{{ path('show_session', {'id': session.id}) }}">{{ session.formation }}</a> {{ session.dateDebut | date("d/m/Y") }} au {{ session.dateFin | date("d/m/Y") }}
    </p>
    <p>
        <a href="{{ path('new_session', {'formation_id': formation.id}) }}">Ajouter une session</a>
    </p>
    {% endfor %}

{% endblock %}